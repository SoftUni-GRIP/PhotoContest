<div class="configuration k-widget k-header" style="width: 300px">
    <span class="infoHead">Information</span>
    <p>
        This example shows how to handle events triggered by kendoUpload.
    </p>
</div>
<div style="width:45%">
    <div class="demo-section">
        @(Html.Kendo().Upload()
            .Name("files")
            .Async(a => a
                .Save("Save", "Upload")
                .Remove("Remove", "Upload")
                .AutoUpload(true)
            )
            .Events(events => events
                .Cancel("onCancel")
                .Complete("onComplete")
                .Error("onError")
                .Progress("onProgress")
                .Remove("onRemove")
                .Select("onSelect")
                .Success("onSuccess")
                .Upload("onUpload")
            )
        )
    </div>
</div>
